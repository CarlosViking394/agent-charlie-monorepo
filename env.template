# Agent Charlie - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=agent_charlie_dev

# ==============================================
# n8n Workflow Automation
# ==============================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# ==============================================
# ElevenLabs TTS Integration
# ==============================================
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_DEFAULT_VOICE_ID=your_preferred_voice_id
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# ==============================================
# Supabase Integration
# ==============================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key
SUPABASE_BUCKET=your_storage_bucket_name
SUPABASE_PUBLIC_URL_PREFIX=https://your-project.supabase.co/storage/v1/object/public/

# ==============================================
# Environment Settings
# ==============================================
NODE_ENV=development

